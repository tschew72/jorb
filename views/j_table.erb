<script>
$.getScript("_/js/loading_scripts/tablescript.js");
</script>

<table id="skillsettingtable" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
       <th>Category</th>
       <th>Skill Name</th>
       <th>Skill Rank</th>
       <th></th>
    </tr>
  </thead>
  <tbody id="aat" >
    <% @allskills.each do |i| %>
    <!-- If flag is set to delete, break. and find next record -->
    <% if i.job_skillstatus != 0 %>
      <tr>
        <td><%= @scmaster.get(@ssmaster.get(i.job_skill).skillcategory_id).categoryname%></td>
        <td><%= @ssmaster.get(i.job_skill).skill_name %> </td>        
        <td>
          <a class="skillrank" href="javascript:void(0)" data-name="skillrank" data-type="select" data-pk="<%= i.job_skill_id%>" data-url="/j_updateskillrank" data-source="[{value: 2, text: 'Basic'}, {value: 3, text: 'Intermediate'}, {value: 4, text: 'Advance'}, {value: 5, text: 'Expert'}]"   data-title="Enter skill rank">  <%= @sr.get(i.job_skillrating).skillrankname %>
          </a>
        </td> 
        <td>
          <a onclick="delskill(this, <%=i.job_skill_id%>)" href="javascript:void(0)"> 
            <i class="fa fa-trash-o fa-lg"></i>
          </a>
        </td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table> <!--skillsettingtable-->


