

<div class="page-container">
    <h1>Jorb Login</h1>
    <form action="/auth/login" method="post">
        <input type="text" name="user[username]" class="username" placeholder="Email Address" >
        <input type="password" name="user[password]" class="password" placeholder="Password">
        <button type="submit">Sign me in</button>
        <div class="error"><span>+</span></div>
    </form>
</div>

<!-- Javascript -->
<script src="_/js/login/jquery-1.8.2.min.js"></script>
<script src="_/js/login/supersized.3.2.7.min.js"></script>
<script src="_/js/login/supersized-init.js"></script>
<script src="_/js/login/scripts.js"></script>


<script>


$('.username').on('blur', function() {
	var input=$(this);
	var username=input.val();;
	$.post("/checkUserStatus", {value: username}, function(data){
		if (data.status == 0) {
			alert ("User Account is suspended. Please contact support@jorb.co for more information");
		} else if (data.status == 2) {
			alert ("User Account has been removed. Please contact support@jorb.co for more information");
		} else if (data.status == 3) {
			alert ("Invalid User! Please retry");			
		}
	}, "json")
});

	
</script>