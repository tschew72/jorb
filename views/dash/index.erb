    $.getJSON("/nationalityDropDown",function(obj){
      $.each(obj,function(key,value)
      {
        var option = $('<option />').val(value.value).text(value.text);
        $("#nationality").append(option);
      });
    }); //getJSON



    // Get the select element
    var select = document.getElementById("nationality");
    // Create a new option element
    var el = document.createElement("option");
    // Add our value to the option
    el.textContent = "<%= @cmaster.get(@mynations).country %>";
    el.value = <%= @cmaster.get(@mynations).country_id %>;
    // Set the option to selected
    el.selected = true;
    // Add the new option element to the select element
    select.appendChild(el);



      // per css-tricks restarting css animations
    // http://css-tricks.com/restart-css-animation/
    $('label').click(function() {
      
      // find the first span which is our circle/bubble
      var el = $(this).children('span:first-child');
      
      // add the bubble class (we do this so it doesnt show on page load)
      el.addClass('circle');
      
      // clone it
      var newone = el.clone(true);  
      
      // add the cloned version before our original
      el.before(newone);  
      
      // remove the original so that it is ready to run on next click
      $("." + el.attr("class") + ":last").remove();
    }); 
  }); //function()





</script>


