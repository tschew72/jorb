<div class="seekerIndexlayout"> 
  <header>Welcome back, <%=@user.firstname%> <%=@user.middlename%> <%=@user.lastname%></header>
  <div id ="loading"></div>
  <div class="Instructions">
    How to get matched to jobs:<br><br>
    <div class="helpCircle">1</div> Update your <a href="/profile">Personal Profile</a> <br>
    <div class="helpCircle">2</div> Create your <a href="/settings">Career Profile</a>  <br>
    <div class="helpCircle">3</div> Expect a call from your future employer <br>
    <p>Click <span class="helpCircle"><i class="fa fa-question"></i></span> for explanation</p>
          
        
    
</div> <!-- Instructions -->
  <section class="jobMatches">
    <header>
      Your Job Matches
      <a href="#helpmodal" data-pk=<%= @user.id %> data-toggle="modal" role="button">
        <span class="helpCircle">
          <i class="fa fa-question"></i>
        </span>
      </a> <!-- addcertmodal -->
    </header>
      <div id="jobMatchTable"> </div>  
  </section> <!--jobMatches -->

  <section class="matchDetail">
    <div id="matchDetail"></div> 
  </section> <!--matchDetail -->
</div> <!--seekerIndexlayout -->



<!-- START of MODAL -->
<div class="modal fade" id="helpmodal" >
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Close</button>
          <header>Job Matches Table</header>                                                            
      </div> <!-- modal-header -->
      <div class="modal-body">   
        <p>
          My Rank: How are you compared to the rest of the job seekers who are matched for the job
        </p>
        <p> Score: Determines how closely matched you are for the job.</p>
        <p> Click on the <b>Score</b> to find out how the score is being calculated for each job match <p>
        <p> Click on <b>Job Title</b> to download Job Description </p>
        <p> If you do not see any matches in this table. Don't panic! Keep your Career Profile updated and you will soon be matched to jobs.</p>
      </div> <!-- modal-body -->
      <div class="modal-footer">

      </div> <!-- modal-footer -->
    </div> <!-- modal-content -->
  </div><!-- modal-dialog -->
</div><!-- addskillmodal  --> 

<script type="text/javascript">
  $(document).ready(function(){
    $("#loading").html("<div class='spinner'></div>"); 
    $("#jobMatchTable").load("/jobmatchtable",{i: new Date().getTime()}, function(){
      $('#matchDetail').html('');
      $('.spinner').fadeOut(1000, function() {$(this).remove();});
      $("html, body").animate({ scrollTop: $(document).height() }, "slow"); }); 
  }); //function()

  function showMatchDetail(i,j){
    $("#loading").html("<div class='spinner'></div>"); 
    $("#matchDetail").load("/jobmatchdetail",{ pk: i ,skrid: j}, function(){
      $('.spinner').fadeOut(1000, function() {$(this).remove();});
      window.location.hash = '#aa';
      window.location.hash = '#matchDetail'; }); 
  };//showmatchdetail


</script>


