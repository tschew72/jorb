<div class="seekerIndexlayout"> 
  <header>Welcome back, <%=@user.firstname%> <%=@user.middlename%> <%=@user.lastname%></header>
      <div class="Instructions">
      <p>
        My Rank: How are you compared to the rest of the job seekers who are matched for the job
      </p>
      <p> Score: Determines how closely matched you are for the job. Maximum is 100 points</p>
      <p> <i class="fa fa-external-link fa-lg"></i>: Show you all the matching criterias and your score <p>
    </div>
  <section class="jobMatches">
    <header>Your Job Matches</header>
      <div id="jobMatchTable"> </div>  
  </section> <!--jobMatches -->

  <section class="matchDetail">
    <div id="matchDetail"></div> 
  </section> <!--matchDetail -->
</div> <!--seekerIndexlayout -->

<script type="text/javascript">
  $(document).ready(function(){
    $("#jobMatchTable").load("/jobmatchtable",{i: new Date().getTime()}, function(){
      window.location.hash = '#aa';
      window.location.hash = '#matchDetail'; }); 
  }); //function()

  function showMatchDetail(i,j){
    $("#matchDetail").load("/jobmatchdetail",{ pk: i ,skrid: j}, function(){
      window.location.hash = '#aa';
      window.location.hash = '#matchDetail'; }); 
  };//showmatchdetail
</script>


